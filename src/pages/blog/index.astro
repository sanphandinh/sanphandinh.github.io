---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Get all unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();
---

<Layout title="Blog - SanPhan's Blog" ogImage="blog">
  <div class="blog-header">
    <h1 class="page-title">Writing</h1>
    <p class="page-description">Thoughts, tutorials, and insights on frontend development.</p>
  </div>

  <div class="filter-bar">
    <div class="search-container">
      <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      <input type="text" id="search-input" placeholder="Search articles..." class="search-input" />
    </div>

    <div class="tags-scroll-container">
      <div class="tags-list">
        <button class="tag-pill active" data-tag="">All</button>
        {allTags.map((tag: string) => (
          <button class="tag-pill" data-tag={tag}>
            {tag}
          </button>
        ))}
      </div>
    </div>
  </div>

  <div class="posts-grid" id="posts-grid">
    {sortedPosts.map((post: CollectionEntry<'blog'>) => (
      <article class="post-card" data-tags={JSON.stringify(post.data.tags || [])} data-title={post.data.title.toLowerCase()}>
        <a href={`/blog/${post.id}`} class="card-link">
          <div class="card-content">
            <div class="card-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </time>
              {post.data.tags && post.data.tags[0] && (
                <span class="card-tag">#{post.data.tags[0]}</span>
              )}
            </div>
            <h2 class="card-title">{post.data.title}</h2>
            <p class="card-description">{post.data.description}</p>
            <div class="card-footer">
              <span class="read-more">Read Article</span>
            </div>
          </div>
        </a>
      </article>
    ))}
  </div>

  <div id="no-results" class="no-results" style="display: none;">
    <p>No articles found matching your criteria.</p>
    <button id="clear-filters" class="btn-text">Clear filters</button>
  </div>
</Layout>

<script>
  function initFilter() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const tagButtons = document.querySelectorAll('.tag-pill');
    const posts = document.querySelectorAll('.post-card');
    const noResults = document.getElementById('no-results');
    const clearFiltersBtn = document.getElementById('clear-filters');

    let currentTag = '';
    let currentSearch = '';

    // Initialize from URL
    const urlParams = new URLSearchParams(window.location.search);
    const tagParam = urlParams.get('tag');
    if (tagParam) {
      currentTag = tagParam;
      updateActiveTag(currentTag);
    }

    function updateActiveTag(tag: string) {
      tagButtons.forEach(btn => {
        if (btn.getAttribute('data-tag') === tag) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });
    }

    function filterPosts() {
      let visibleCount = 0;

      posts.forEach(post => {
        const postElement = post as HTMLElement;
        const postTags = JSON.parse(postElement.getAttribute('data-tags') || '[]');
        const postTitle = postElement.getAttribute('data-title') || '';

        const matchesTag = !currentTag || postTags.includes(currentTag);
        const matchesSearch = !currentSearch || postTitle.includes(currentSearch);

        if (matchesTag && matchesSearch) {
          postElement.style.display = '';
          visibleCount++;
        } else {
          postElement.style.display = 'none';
        }
      });

      if (noResults) {
        noResults.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }

    // Event Listeners
    searchInput?.addEventListener('input', (e) => {
      currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
      filterPosts();
    });

    tagButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const tag = btn.getAttribute('data-tag') || '';

        if (currentTag === tag && tag !== '') {
            // Toggle off if clicking same tag
            currentTag = '';
            updateActiveTag('');
            window.history.pushState({}, '', '/blog');
        } else {
            currentTag = tag;
            updateActiveTag(tag);
            if (tag) {
                window.history.pushState({}, '', `/blog?tag=${encodeURIComponent(tag)}`);
            } else {
                window.history.pushState({}, '', '/blog');
            }
        }
        filterPosts();
      });
    });

    clearFiltersBtn?.addEventListener('click', () => {
      currentTag = '';
      currentSearch = '';
      if (searchInput) searchInput.value = '';
      updateActiveTag('');
      window.history.pushState({}, '', '/blog');
      filterPosts();
    });

    // Initial filter
    filterPosts();
  }

  // Run on load
  initFilter();

  // Run on view transitions if enabled
  document.addEventListener('astro:page-load', initFilter);
</script>

<style>
  .blog-header {
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Filter Bar */
  .filter-bar {
    margin-bottom: 4rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .search-container {
    position: relative;
    max-width: 500px;
    margin: 0 auto;
    width: 100%;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 3rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text);
    font-size: 1rem;
    transition: all 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px rgba(245, 158, 11, 0.1);
  }

  .tags-scroll-container {
    overflow-x: auto;
    padding-bottom: 0.5rem;
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }

  .tags-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .tags-list {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    min-width: min-content;
    padding: 0 1rem;
  }

  .tag-pill {
    white-space: nowrap;
    padding: 0.5rem 1.25rem;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .tag-pill:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .tag-pill.active {
    background: var(--color-accent);
    color: var(--color-bg);
    border-color: var(--color-accent);
  }

  /* Grid (Shared with Home) */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-8px);
    border-color: var(--color-accent);
    box-shadow: var(--shadow-glow);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .card-tag {
    color: var(--color-accent);
    font-weight: 600;
  }

  .card-title {
    font-size: 1.5rem;
    line-height: 1.3;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-weight: 700;
  }

  .card-description {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .card-footer {
    margin-top: auto;
  }

  .read-more {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
    display: inline-flex;
    align-items: center;
  }

  .no-results {
    text-align: center;
    padding: 4rem 0;
    color: var(--color-text-secondary);
  }

  .btn-text {
    background: none;
    border: none;
    color: var(--color-accent);
    font-weight: 600;
    cursor: pointer;
    margin-top: 1rem;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .tags-list {
      justify-content: flex-start;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
