---

<PortfolioLayout
  title={`${resumeData.name} - ${resumeData.title}`}
  description={resumeData.about}
>
  <div class="min-h-screen bg-white text-[#6D6D6D] font-sans">
    {/* Header Section */}
    <header
      class="container mx-auto px-4 py-8 flex flex-col md:flex-row justify-between items-center relative"
    >
      <div class="flex flex-col text-left mb-8 md:mb-0">
        <p class="text-6xl md:text-8xl font-bold text-[#999999]">Hello</p>
        <p class="text-6xl md:text-8xl font-bold text-[#999999]">
          I’m {resumeData.name.split(' ')[0]}
        </p>
        <p class="text-6xl md:text-8xl font-bold text-[#999999]">
          {resumeData.name.split(' ')[1]}
        </p>
      </div>

      <div class="flex flex-col items-end md:items-center">
        <nav
          class="flex gap-4 mb-4 md:mb-0 text-lg font-medium text-black tracking-widest uppercase"
        >
          <a href="#about" class="hover:text-gray-700">ABOUT</a>
          <a href="#projects" class="hover:text-gray-700">PROJECT</a>
          <a href="#work" class="hover:text-gray-700">WORK</a>
        </nav>
        <div
          class="flex gap-4 mt-4 text-black font-medium text-base tracking-widest uppercase"
        >
          <a
            href="https://twitter.com/sanphandinh"
            target="_blank"
            rel="noopener noreferrer">TW.</a
          >
          <a
            href="https://www.linkedin.com/in/sanphandinh/"
            target="_blank"
            rel="noopener noreferrer">IN.</a
          >
          <a
            href="https://www.facebook.com/dinhsan.phan"
            target="_blank"
            rel="noopener noreferrer">FB.</a
          >
        </div>
        <a
          href={withBasePath('/Phan Đình San - CV 20250101.pdf')}
          download="Phan Đình San - CV 20250101.pdf"
          class="mt-8 px-8 py-4 bg-[#FFE8E8] text-black font-medium text-xl tracking-widest opacity-60"
        >
          DOWNLOAD CV
        </a>
      </div>
      {/* Vertical line - hidden on small screens, shown on large */}
      <div
        class="absolute inset-y-0 left-1/2 w-px bg-[#D8D8D8] hidden lg:block"
      >
      </div>
    </header>

    {/* About Section */}
    <section
      id="about"
      class="container mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-2 gap-8 items-center"
    >
      <div>
        <h2 class="text-6xl font-bold text-[#999999] mb-8">About</h2>
        <p class="text-lg leading-loose mb-4 font-poppins">
          {resumeData.about}
        </p>
        <p class="text-5xl font-script text-[#6D6D6D] mt-8">
          {resumeData.name.replace(' ', '')}
        </p>
      </div>

      <div class="relative mt-8 md:mt-0">
        <div class="w-full h-96 bg-[#F8F8F8] overflow-hidden">
          <img
            src="/images/8728f22cc72f712417083153752e79cad2330f81.png"
            alt="About"
            class="w-full h-full object-cover"
          />
        </div>
        <div
          class="absolute bottom-0 right-0 w-full md:w-80 bg-white p-6 shadow-lg"
        >
          <div class="mb-4">
            <p class="text-xs font-medium text-[#7E7C7C] uppercase">EMAIL</p>
            <p class="text-lg font-normal text-[#2E2E2E]">
              {resumeData.contact.email}
            </p>
          </div>
          <div class="mb-4">
            <p class="text-xs font-medium text-[#7E7C7C] uppercase">ROLE</p>
            <p class="text-lg font-normal text-[#2E2E2E]">{resumeData.title}</p>
          </div>
          <div>
            <p class="text-xs font-medium text-[#7E7C7C] uppercase">PHONE</p>
            <p class="text-lg font-normal text-[#2E2E2E]">
              {resumeData.contact.phone}
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* Work Section */}
    <section id="work" class="container mx-auto px-4 py-16">
      <h2 class="text-6xl font-bold text-[#999999] mb-8">Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          resumeData.experience.map((exp) => (
            <div class="bg-white p-6 rounded-2xl shadow-lg">
              <h3 class="text-3xl font-medium text-[#6D6D6D] mb-2">
                {exp.company}
              </h3>
              <p class="text-lg text-[#7E7C7C] mb-4">{exp.duration}</p>
              <p class="text-base text-[#6D6D6D] leading-relaxed mb-4">
                {exp.title}
              </p>
              <ul class="list-disc list-inside text-base text-[#6D6D6D] leading-relaxed mb-4">
                {exp.description.map((desc) => (
                  <li>{desc}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </section>

    {/* Projects Section */}
    <section id="projects" class="container mx-auto px-4 py-16">
      <h2 class="text-6xl font-bold text-[#999999] mb-8">Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          resumeData.projects.map((project) => (
            <div class="bg-white p-6 rounded-2xl shadow-lg">
              <div class="w-full h-64 overflow-hidden mb-4">
                <img
                  src={withBasePath(`/images/${project.image}`)}
                  alt={project.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <h3 class="text-5xl font-bold text-[#999999] mb-4">
                {project.name}
              </h3>
              <p class="text-base text-[#6D6D6D] leading-relaxed">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-4">
                {project.techStack.map((tech) => (
                  <span class="px-4 py-2 bg-[#EDEDED] text-[#666666] text-xs font-medium rounded-2xl">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</PortfolioLayout>

<style is:global>
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-down {
    animation: fadeInDown 1s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out forwards;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }
  .delay-200 {
    animation-delay: 0.2s;
  }
  .delay-300 {
    animation-delay: 0.3s;
  }
  .delay-400 {
    animation-delay: 0.4s;
  }
  .delay-500 {
    animation-delay: 0.5s;
  }
  .delay-600 {
    animation-delay: 0.6s;
  }
</style>
