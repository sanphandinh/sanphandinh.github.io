<style>
  .about-container {
    max-width: 820px;
  }

  .about-header {
    display: flex;
    gap: 3rem;
    align-items: flex-start;
    margin-bottom: 4rem;
    padding: 2rem;
    background: var(--gradient-card);
    border-radius: 16px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
  }

  .profile-image-wrapper {
    flex-shrink: 0;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 16px;
    object-fit: cover;
    border: 3px solid var(--color-accent);
    box-shadow: var(--shadow-glow);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .profile-image:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }

  .header-content {
    flex: 1;
  }

  .header-content h1 {
    margin-bottom: 1.5rem;
    font-size: 2.5rem;
  }

  .intro {
    color: var(--color-text-secondary);
    line-height: 1.8;
    font-size: 1.125rem;
    margin: 0;
  }

  .intro strong {
    color: var(--color-accent-light);
    font-weight: 700;
  }

  .content-section {
    margin-bottom: 4rem;
  }

  .content-section h2 {
    margin-bottom: 1.5rem;
    font-size: 2rem;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .content-section h2::before {
    content: '';
    width: 4px;
    height: 2rem;
    background: var(--gradient-hero);
    border-radius: 2px;
  }

  .topics-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1rem;
  }

  .topics-list li {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-secondary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 1.0625rem;
  }

  .topics-list li:hover {
    background: var(--color-bg-elevated);
    border-color: var(--color-accent);
    transform: translateX(8px);
    box-shadow: var(--shadow-md);
  }

  .topics-list .icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .contact-text {
    color: var(--color-text-secondary);
    line-height: 1.8;
    font-size: 1.125rem;
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border-left: 4px solid var(--color-accent);
    border-radius: 8px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .about-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 2rem;
      padding: 1.5rem;
    }

    .profile-image {
      width: 150px;
      height: 150px;
    }

    .header-content h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1rem;
    }

    .content-section h2 {
      font-size: 1.5rem;
    }

    .topics-list li {
      padding: 1rem;
      font-size: 1rem;
    }

    .topics-list li:hover {
      transform: translateX(4px);
    }
  }
</style>
